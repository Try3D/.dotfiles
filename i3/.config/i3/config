# i3 Config

set $mod Mod1
set $l n
set $u i
set $d e
set $r o

font pango: Ubuntu Mono 8

# Adjust Screen Brightness
bindsym XF86MonBrightnessUp exec brightnessctl s +10%
bindsym XF86MonBrightnessDown exec brightnessctl s 10%-

# Adjust audio
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Method of Popup
popup_during_fullscreen leave_fullscreen

# Focus
focus_on_window_activation focus
focus_follows_mouse no

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Borders
hide_edge_borders smart
for_window [class="^.*"] border pixel 1

# Start a terminal
bindsym $mod+Return exec alacritty

# Kill focused window
bindsym $mod+q kill

# Start rofi
bindsym $mod+r exec rofi -show-icons -show run
bindsym $mod+slash exec rofi -show-icons -show window
bindsym $mod+space exec rofi -show-icons -show drun

# Change focus
bindsym $mod+$l focus left
bindsym $mod+$d focus down
bindsym $mod+$u focus up
bindsym $mod+$r focus right
# Also with cursor keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# move focused window
bindsym $mod+Shift+$l move left
bindsym $mod+Shift+$d move down
bindsym $mod+Shift+$u move up
bindsym $mod+Shift+$r move right
# Also with cursor keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split Windows
bindsym $mod+s split v
bindsym $mod+v split h

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout
bindsym $mod+w layout tabbed
bindsym $mod+g layout stacking
bindsym $mod+t layout toggle split

bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+ctrl+space focus mode_toggle

# Define names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# restart i3 inplace
bindsym $mod+Shift+r restart

# Create Log out, Reboot, Poweroff bindings
mode "Exit (L)ogout, (R)eboot, (P)oweroff" {
    bindsym $mod+r exec systemctl reboot
    bindsym $mod+l exit
    bindsym $mod+p exec systemctl poweroff

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+s mode "Exit (L)ogout, (R)eboot, (P)oweroff"

bindsym $mod+l resize shrink width 4 px or 4 ppt
bindsym $mod+u resize grow height 4 px or 4 ppt
bindsym $mod+y resize shrink height 4 px or 4 ppt
bindsym $mod+semicolon resize grow width 4 px or 4 ppt

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Custom Keybindings
bindsym $mod+p exec pcmanfm
bindsym $mod+Escape exec i3lock-fancy
bindsym $mod+Shift+t exec ~/.local/bin/togglealacrittyopacity
bindsym $mod+Shift+p exec ~/.local/bin/touchpadtoggle.sh
bindsym $mod+Shift+b exec ~/.local/bin/setbackground
bindsym $mod+ctrl+Shift+space exec  ~/.local/bin/setkeyboard

# To be executed on reload
exec_always --no-startup-id killall polybar; polybar &
exec_always ~/.local/bin/setkeyboard prog_ck.xkb &

# Startup Applications
exec firefox &
exec picom &
exec nm-applet &
exec blueman-applet &
exec ~/.local/bin/i3-battery-popup &
exec ~/.fehbg &
