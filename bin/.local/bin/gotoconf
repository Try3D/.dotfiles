#!/usr/bin/sh

cd ~/.dotfiles/
SELECTED=`shuf -e */ | fzf`

if [ -z $SELECTED ]
then
    :
elif [ "$SELECTED" = "alacritty/" ]
then
    nvim ~/.config/alacritty/alacritty.yml
elif [ "$SELECTED" = "bin/" ]
then
    cd ~/.dotfiles/bin/.local/bin/; nvim gotoconf
elif [ "$SELECTED" = "foot/" ]
then
    nvim ~/.config/foot/foot.ini
elif [ "$SELECTED" = "i3/" ]
then
    cd ~/.config/i3/; nvim config
elif [ "$SELECTED" = "keyboard/" ]
then
    nvim ~/.config/xkb/prog_ck.xkb
elif [ "$SELECTED" = "nvim/" ]
then
    cd ~/.config/nvim/; nvim init.lua
elif [ "$SELECTED" = "picom/" ]
then
    nvim ~/.config/picom.conf
elif [ "$SELECTED" = "polybar/" ]
then
    nvim ~/.config/polybar/config.ini
elif [ "$SELECTED" = "sway/" ]
then
    nvim ~/.config/sway/config
elif [ "$SELECTED" = "tmux/" ]
then
    nvim ~/.tmux.conf
elif [ "$SELECTED" = "waybar/" ]
then
    cd ~/.config/waybar/; nvim config
elif [ "$SELECTED" = "zsh/" ]
then
    nvim ~/.zshrc
else
    echo "Does not exist"
fi
