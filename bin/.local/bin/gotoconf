#!/usr/bin/sh

cd ~/.dotfiles/
confs=`echo */ | tr ' ' '\n'`

SELECTED=`echo "$confs" | fzf`

if [ "$SELECTED" = "alacritty/" ]
then
    nvim ~/.config/alacritty/alacritty.yml
elif [ "$SELECTED" = "bin/" ]
then
    cd ~/.dotfiles/bin/.local/bin; nvim gotoconf
elif [ "$SELECTED" = "i3/" ]
then
    cd ~/.config/i3; nvim config
elif [ "$SELECTED" = "nvim/" ]
then
    cd ~/.config/nvim; nvim init.vim
elif [ "$SELECTED" = "keyboard/" ]
then
    cd ~/.config/xkb/; nvim vim-colemak.xkb
elif [ "$SELECTED" = "picom/" ]
then
    nvim ~/.config/picom.conf
elif [ "$SELECTED" = "starship/" ]
then
    nvim ~/.config/starship.toml
elif [ "$SELECTED" = "tmux/" ]
then
    nvim ~/.tmux.conf 
elif [ "$SELECTED" = "wallpapers/" ]
then
    nitrogen &
elif [ "$SELECTED" = "zsh/" ]
then
    nvim ~/.zshrc
else
    echo "Does not exist sorry"
fi
