#!/usr/bin/sh

BACKGROUND=$HOME/.local/share/backgrounds/
cd $BACKGROUND

if [ "$1" = "-r" -o "$1" = "--random" ]; then
    SELECTED=`shuf -e * | shuf -n 1`
else
    SELECTED=`shuf -e * |  dmenu -i -fn "JetBrains Mono:pixelsize=16" -nb "#1a1b26" -nf "#c0caf5" -sb "#9ece6a" -sf "#15161E" -p "Bg"`

fi

rm ~/.config/sway/background

echo output \* bg $BACKGROUND/$SELECTED fill >> ~/.config/sway/background

sway reload
